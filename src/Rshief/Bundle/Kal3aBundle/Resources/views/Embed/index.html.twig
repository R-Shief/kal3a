{% extends '::base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">
    <style>
        .trend-up {
            color: cadetblue;
        }
        .trend-down {
            color: gray;
        }
    </style>
{% endblock %}

{% block javascripts %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
{% endblock %}

{% block body %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h1 class="panel-title">R-Shief</h1> <span class="text-right">Trending Today</span>
        </div>
        <table class="table table-striped table-condensed">
            <caption>
                <span class="trend-up"><i class="glyphicon glyphicon-chevron-up"></i> Growing</span>
                <span class="trend-down"><i class="glyphicon glyphicon-chevron-down"></i> On the decline</span>
            </caption>
            <tbody>
            {% for trend in trends %}
                <tr>
                    <td><a class="trend-{{ random(['up', 'down']) }}" href="{{ url('bangpound_castle_search_result', { queryTerm: trend.tag }) }}">{{ trend.tag }}</a></span></td>
                    <td class="text-right">{{ trend.count | number_format }}</td>
                </tr>
            {% endfor -%}
            </tbody>
        </table>
        <div class="panel-footer">
            <a href="http://r-shief.org">r-shief.org</a>
            <a data-toggle="modal" data-target="#myModal">&lt;embed&gt;</a>
        </div>
    </div>
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Use this embed code</h4>
                </div>
                <div class="modal-body">
                    <label>Embed code</label>
                    <textarea class="form-control">
                        {{- '<iframe width="300" height="600" frameborder="0" src="' ~ url('rshief_kal3a_embed_index') ~ '"></iframe>' -}}
                    </textarea>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
