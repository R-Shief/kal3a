<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping>
    <document name="Bangpound\Atom\DataBundle\CouchDocument\EntryType">
        <field name="lang" type="string" />
        <field name="base" type="string" />

        <id name="identifier" type="string" />

        <field name="id" type="string" index="true" />
        <field name="content" json-name="content" type="mixed" />
        <field name="published" json-name="published" type="datetime" index="true" />
        <field name="rights" json-name="rights" type="mixed" />
        <field name="summary" json-name="summary" type="mixed" />
        <field name="title" json-name="title" type="mixed" />
        <field name="updated" json-name="updated" type="datetime" />

        <field name="source" type="mixed" />

        <field name="authors" type="mixed" />
        <field name="categories" type="mixed" />
        <field name="contributors" type="mixed" />
        <field name="links" type="mixed" />
    </document>
</doctrine-mapping>
