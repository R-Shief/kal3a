<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping>
    <embedded-document name="Bangpound\Atom\DataBundle\CouchDocument\SourceType">
        <field name="generator" json-name="generators" type="mixed" />
        <field name="icon" json-name="icon" type="string" />
        <field name="id" json-name="id" type="string" />
        <field name="title" json-name="title" type="mixed" />

        <embed-many target-document="PersonType" field="authors" />
        <embed-many target-document="CategoryType" field="categories" />
        <embed-many target-document="PersonType" field="contributors" />
        <embed-many target-document="LinkType" field="links" />
    </embedded-document>
</doctrine-mapping>
