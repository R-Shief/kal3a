{% extends '::base.html.twig' %}

{% block stylesheets %}
    {% stylesheets filter='cssrewrite' "vendor/bootstrap-sass/dist/css/bootstrap.css" "vendor/bootstrap-sass/dist/css/bootstrap-theme.css" "vendor/font-awesome/css/font-awesome.css" %}
    <link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {% javascripts "bundles/fosjsrouting/js/router.js" "bundles/cypressangularngrouting/ng-router.js" %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
    <script src="{{ path('fos_js_routing_js', {"callback": "cypress.NgRouter.setData"}) }}"></script>
    <script>
        var castle = {
            typeNames: {{ castle_type_names | json_encode | raw }}
        };
    </script>
    {% javascripts "vendor/jquery/dist/jquery.js" "vendor/bootstrap-sass/dist/js/bootstrap.js" %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block body %}
    <div ng-app="castleSearch">
        <div ng-controller="SearchCtrl" ng-cloak>
            {% block navbar %}{% endblock %}
            <section id="pagetop">
                <div class="container">
                    <div class="row">
                        <div class="col-12">
                            {% block header %}{% endblock %}
                        </div>
                    </div>
                </div>
            </section>
            <section id="pagemain">
                <div class="container">
                    {% block content %}{% endblock %}
                </div>
            </section>
        </div>
    </div>
    {% block footer %}{% endblock %}
{% endblock %}
