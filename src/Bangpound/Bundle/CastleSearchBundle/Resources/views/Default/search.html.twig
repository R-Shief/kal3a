{% extends "@BangpoundCastleSearch/layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets filter='cssrewrite'
    "vendor/dangle/css/dangle.css"
    %}<link href="{{ asset_url }}" type="text/css" rel="stylesheet" />{% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
    {% javascripts
    %}<script type="text/javascript" src="{{ asset_url }}"></script>{% endjavascripts %}
{% endblock %}

{% block navbar %}
    <nav class="navbar navbar-default" role="navigation">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">Castle</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        </div><!-- /.navbar-collapse -->
    </nav>
{% endblock %}

{% block header %}
    <h1 class="pagetitle">
        Search R-Shief
    </h1>
{% endblock %}

{% block footer %}
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-4">
            {{ block('first_sidebar') }}
        </div>
        <div class="col-md-4">
            {{ block('main') }}
        </div>
        <div class="col-md-4">
            {{ block('second_sidebar') }}
        </div>
    </div>
{% endblock %}

{% block main %}
    {{ form(form) }}
{% endblock %}

{% block first_sidebar %}
    {{ sonata_block_render({
        'type': 'bangpound_castle_search.block.date_view',
        'settings': {
            'design_document': 'stats',
            'view': 'daily',
            'reduce': true,
            'group': true,
            'descending': true,
            'group_level': 3
        }
    }) }}
    {{ sonata_block_render({
        'type': 'bangpound_castle_search.block.date_view',
        'settings': {
            'design_document': 'stats',
            'view': 'daily',
            'reduce': true,
            'group': true,
            'descending': true,
            'group_level': 4,
            'date_format': 'M-d-Y H:i:s'
        }
    }) }}
{% endblock %}

{% block second_sidebar %}
    {{ sonata_block_render({
        'type': 'bangpound_castle_search.block.date_view',
        'settings': {
            'design_document': 'stats',
            'view': 'collection',
            'reduce': true,
            'group': true,
            'descending': true,
            'group_level': 4,
            'date_key': 1,
            'template': 'BangpoundCastleSearchBundle:Block:block_view_grouping.html.twig'
        }
    }) }}
    {{ sonata_block_render({
        'type': 'bangpound_castle_search.block.date_view',
        'settings': {
            'design_document': 'stats',
            'view': 'tag',
            'reduce': true,
            'group': true,
            'group_level': 4,
            'date_key': 1,
            'template': 'BangpoundCastleSearchBundle:Block:block_view_grouping.html.twig'
        }
    }) }}
{% endblock %}
