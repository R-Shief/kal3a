<div id="modal-results" role="dialog" class="modal fade" aria-labelledby="modal-results-header">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 id="modal-results-header">Number of results per page</h4>
            </div>
            <div class="modal-body">
                <input ng-model="query._self().size" type="number">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" ng-click="search()" data-dismiss="modal">Save changes</button>
            </div>
        </div>
    </div>
</div>
