{% extends "@BangpoundCastleSearch/layout.html.twig" %}

{% block navbar %}
    <nav class="navbar navbar-default" role="navigation">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">Castle</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        </div><!-- /.navbar-collapse -->
    </nav>
{% endblock %}

{% block header %}
    <h1 class="pagetitle">
        Search R-Shief
    </h1>
{% endblock %}

{% block footer %}
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-4">
            {{ block('first_sidebar') }}
        </div>
        <div class="col-md-4">
            {{ block('main') }}
        </div>
        <div class="col-md-4">
            {{ block('second_sidebar') }}
        </div>
    </div>
{% endblock %}

{% block main %}
    {{ form(form) }}
{% endblock %}

{% block first_sidebar %}
    {{ render(controller('BangpoundCastleSearchBundle:Statistics:daily')) }}
    {{ render(controller('BangpoundCastleSearchBundle:Statistics:hourly')) }}
{% endblock %}

