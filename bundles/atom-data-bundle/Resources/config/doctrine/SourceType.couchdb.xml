<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping>
    <embedded-document name="Bangpound\Atom\DataBundle\CouchDocument\SourceType">
        <field name="lang" type="string" />
        <field name="base" type="string" />

        <embed-one field="generator" target-document="GeneratorType" />

        <field name="icon" type="string" />
        <field name="id" type="string" />
        <field name="logo" type="string" />
        <embed-one field="rights" target-document="TextType" />
        <embed-one field="subtitle" target-document="TextType" />
        <embed-one field="title" target-document="TextType" />
        <field name="updated" type="datetime" />

        <embed-many target-document="PersonType" field="authors" />
        <embed-many target-document="CategoryType" field="categories" />
        <embed-many target-document="PersonType" field="contributors" />
        <embed-many target-document="LinkType" field="links" />
    </embedded-document>
</doctrine-mapping>
