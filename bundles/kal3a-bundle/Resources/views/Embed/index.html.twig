{% extends '::base.html.twig' %}

{% block head %}
    <base target="_parent" />
{% endblock %}

{% block stylesheets %}
    {% stylesheets filter='cssrewrite'
    "bundles/rshiefkal3a/css/widget.scss" %}
    <link href="{{ asset_url }}" type="text/css" rel="stylesheet" />{% endstylesheets %}
{% endblock %}

{% block javascripts %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
{% endblock %}

{% block body %}
    <div class="panel panel-default">
        <div class="panel-heading clearfix">
            <h1 class="panel-title" style="float:left;">R-Shief</h1>
            <div style="float:right;">
                <span class="text-right">Trending Today</span>
            </div>
        </div>
        <table class="table table-striped table-condensed">
            <tbody>
            {% for trend in trends %}
                <tr>
                    <td><a class="trend-{{ random(['up', 'down']) }}" href="{{ url('bangpound_castle_search_result', { queryTerm: trend.tag }) }}">#{{ trend.tag }}</a></td>
                    <td class="text-right">{{ trend.count | number_format }} <i class="glyphicon glyphicon-chevron-{{ random(['up', 'down']) }}"></i></td>
                </tr>
            {% endfor -%}
            </tbody>
        </table>
        <div class="panel-footer">
            <a href="http://r-shief.org">www.r-shief.org</a>
            <div style="float:right;">
                <a class="text-right" data-toggle="modal" data-target="#myModal">&lt;embed&gt;</a>
            </div>
        </div>
    </div>
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Use this embed code</h4>
                </div>
                <div class="modal-body">
                    <label>Embed code</label>
                    <textarea class="form-control">
                        {{- '<iframe width="300" height="600" frameborder="0" src="' ~ url('rshief_kal3a_embed_index') ~ '"></iframe>' -}}
                    </textarea>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
